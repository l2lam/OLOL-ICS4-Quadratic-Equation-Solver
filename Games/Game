num1 = float(var1)
num2 = float(4)
answer1 = (num1 * num2)

answer_1 = input(
    f"a){var1 + 5.0}\nb){var1 - 2.0}\nc){answer1}\nd){var1+20.0}\n:")

#####print("The formula for the perimeter of a square is Side Length * 4")

if answer_1.lower() == "c":
    print("Correct")
    score = score + 1
    print(f"You have {score} point(s)")
else:
